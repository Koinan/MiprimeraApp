<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom|center_horizontal"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/gif1" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:textAllCaps="false"
        android:textColor="#0234FF"
        android:scaleType="centerInside"
        android:background="@drawable/botonvacio"
        android:text="@string/Nuevaventana" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onClick4"
        android:textAllCaps="false"
        android:textColor="#0234FF"
        android:src="@drawable/loginbutton"
        android:scaleType="fitCenter"
        android:background="@drawable/botonvacio"
        android:text="@string/Login" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="golist"
        android:textAllCaps="false"
        android:textColor="#0234FF"
        android:src="@drawable/listbutton"
        android:scaleType="fitCenter"
        android:background="@drawable/botonvacio"
        android:text="@string/GoList" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="gogaleria"
        android:textAllCaps="false"
        android:textColor="#0234FF"
        android:src="@drawable/gallerybutton"
        android:scaleType="fitCenter"
        android:adjustViewBounds="false"
        android:background="@drawable/botonvacio"
        android:text="@string/Galeria" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onClick2"
        android:textAllCaps="false"
        android:textColor="#0234FF"
        android:src="@drawable/wowbutton"
        android:scaleType="fitCenter"
        android:background="@drawable/botonvacio"
        android:text="@string/Gowow" />




</LinearLayout>